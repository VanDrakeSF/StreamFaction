@model IEnumerable<StreamFaction.Models.Bans>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ban_description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ban_start_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ban_end_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ban_create_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ban_modif_date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ban_description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ban_start_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ban_end_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ban_create_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ban_modif_date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ban_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ban_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ban_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
