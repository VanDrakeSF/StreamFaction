            </div>
            <div class="form-group">
                <label asp-for="usrif_surname" class="control-label"></label>
                <input asp-for="usrif_surname" class="form-control" />
                <span asp-validation-for="usrif_surname" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="usrif_surname_visible" /> @Html.DisplayNameFor(model => model.usrif_surname_visible)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="usrif_avatar" class="control-label"></label>
                <input asp-for="usrif_avatar" class="form-control" />
                <span asp-validation-for="usrif_avatar" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="usrif_BDdate_visible" /> @Html.DisplayNameFor(model => model.usrif_BDdate_visible)
