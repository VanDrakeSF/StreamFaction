            </div>
            <div class="form-group">
                <label asp-for="usrif_BDdate" class="control-label"></label>
                <input asp-for="usrif_BDdate" class="form-control" />
                <span asp-validation-for="usrif_BDdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="usrif_create_date" class="control-label"></label>
                <input asp-for="usrif_create_date" class="form-control" />
                <span asp-validation-for="usrif_create_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="usrif_modif_date" class="control-label"></label>
                <input asp-for="usrif_modif_date" class="form-control" />
                <span asp-validation-for="usrif_modif_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
